kind: Service
apiVersion: v1
metadata:
  name: http-https-echo
  namespace: echo-server
  labels:
    app: http-https-echo
    app.kubernetes.io/component: http-https-echo
    app.kubernetes.io/instance: http-https-echo
    app.kubernetes.io/name: http-https-echo
    app.kubernetes.io/part-of: http-https-echo-app
    app.openshift.io/runtime-version: '30'
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-nlb-target-type: instance
    service.beta.kubernetes.io/aws-load-balancer-private-ipv4-addresses: '10.201.0.200, 10.201.1.200, 10.201.2.200'
    service.beta.kubernetes.io/aws-load-balancer-scheme: internal
    service.beta.kubernetes.io/aws-load-balancer-type: external

spec:
  ports:
    - name: 8080-tcp
      protocol: TCP
      port: 8080
      targetPort: 8080
    - name: 8443-tcp
      protocol: TCP
      port: 8443
      targetPort: 8443
  type: LoadBalancer

